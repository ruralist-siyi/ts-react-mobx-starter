{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@router/*": ["src/router/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src/**/*.{ts,js,jsx,tsx}"],
  "exclude": ["node_modules", "dist", "build", "jest"]
}
